.stockPrices
  display: grid
  gap: 0.75rem

.stockItem
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0.75rem
  background: #f8fafc
  border-radius: 0.5rem
  transition: all 0.2s

  &:hover
    background: #f1f5f9

.stockName
  font-weight: 600
  color: #1e293b

.stockPrice
  font-family: monospace
  font-size: 1.1rem

.stockChange
  display: flex
  align-items: center
  gap: 0.25rem
  font-weight: 500

.positive
  color: #16a34a

.negative
  color: #dc2626 