.recentTrades
  display: flex
  flex-direction: column
  gap: 0.75rem

.tradeItem
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0.75rem
  background: #f8fafc
  border-radius: 0.5rem
  transition: all 0.2s

  &:hover
    background: #f1f5f9

.tradeTeam
  font-weight: 600

.penguins
  color: #0ea5e9

.monkeys
  color: #ca8a04

.foxes
  color: #ea580c

.iguanas
  color: #16a34a

.tradeInfo
  display: flex
  flex-direction: column
  align-items: flex-end
  gap: 0.25rem

.tradeAction
  display: flex
  align-items: center
  gap: 0.25rem
  font-weight: 500
  font-size: 0.8rem

.buy
  color: #16a34a

.sell
  color: #dc2626

.tradeDetails
  font-family: monospace
  font-size: 0.9rem
  color: #64748b 