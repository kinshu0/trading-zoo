.newsFeed
  display: flex
  flex-direction: column
  gap: 1rem

.newsItem
  padding: 1rem
  background: #f8fafc
  border-radius: 0.5rem
  border-left: 4px solid #22c55e
  transition: all 0.2s

  &:hover
    background: #f1f5f9

.newsTitle
  font-size: 0.9rem
  font-weight: 500
  color: #1e293b
  margin-bottom: 0.5rem

.newsTime
  display: flex
  align-items: center
  gap: 0.25rem
  color: #64748b
  font-size: 0.8rem 