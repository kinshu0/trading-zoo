.portfolios
  display: grid
  gap: 1rem

.portfolio
  padding: 1rem
  background: #f8fafc
  border-radius: 0.5rem
  border-left: 4px solid
  transition: all 0.2s

  &:hover
    background: #f1f5f9

.penguins
  border-color: #0ea5e9

.monkeys
  border-color: #ca8a04

.foxes
  border-color: #ea580c

.iguanas
  border-color: #16a34a

.teamName
  font-weight: 600
  margin-bottom: 0.5rem

.value
  display: flex
  align-items: center
  gap: 0.25rem
  font-size: 1.25rem
  font-weight: 600
  margin-bottom: 0.25rem

.change
  font-size: 0.9rem
  font-weight: 500
  margin-bottom: 0.75rem

.positive
  color: #16a34a

.negative
  color: #dc2626

.holdings
  display: grid
  gap: 0.5rem

.holding
  display: flex
  justify-content: space-between
  font-size: 0.9rem
  color: #64748b 